<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.smartap.ReserveActivity">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_click"
            android:onClick="btnClicked"
            android:text="1번예약" /> // 1번구 예약

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="btnClicked"
            android:text="2번예약" /> //2번구 예약

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="btnClicked"
            android:text="3번예약" /> //3번구 예약

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="btnClicked"
            android:text="4번예약" /> //4번구 예약

        <Button
            android:id="@+id/dButton1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:saveEnabled="true"
            android:text="월" /> //월요일

        <Button
            android:id="@+id/dButton2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="화" /> //화요일

        <Button
            android:id="@+id/dButton3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="수" /> //수요일

        <Button
            android:id="@+id/dButton4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="목" /> //목요일

        <Button
            android:id="@+id/dButton5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="금" /> //금요일

        <Button
            android:id="@+id/dButton6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="토" /> //토요일

        <Button
            android:id="@+id/dButton7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="dayBtnClicked"
            android:text="일" /> //일요일

        <Button
            android:id="@+id/resBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/selector_btn_click"
            android:onClick="resBtnClicked"
            android:text="예약" />//예약실행

        <Switch
            android:id="@+id/switch20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:checked="false"
            android:onClick="resSwitchClicked"
            android:showText="true"
            android:textOff="off"
            android:textOn="on"
            tools:checked="false" />
        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"></TimePicker>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

